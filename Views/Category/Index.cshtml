@model IEnumerable<ToDoUygulaması.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h1>Kategoriler</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">Yeni Kategori Ekle</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Kategori Adı</th>
                                        <th>Açıklama</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                                                    <a asp-controller="Todo" asp-action="Index" asp-route-categoryId="@item.Id" class="btn btn-sm btn-info">Görevleri Göster</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <p class="mb-0">Henüz kategori bulunmamaktadır. Yeni bir kategori eklemek için "Yeni Kategori Ekle" butonuna tıklayın.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>